generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tenant model - stores tenant information
model Tenant {
  id        String   @id @default(uuid())
  subdomain String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users        User[]
  sessions     Session[]
  orgSettings  OrgSettings?

  @@index([subdomain])
}

// User model - stores users with tenantId
model User {
  id        String   @id @default(uuid())
  email     String
  password  String   // Should be hashed
  name      String?
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  sessions Session[]

  @@unique([email, tenantId])
  @@index([tenantId])
  @@index([email, tenantId])
}

// Session model - stores user sessions
model Session {
  id        String   @id @default(uuid())
  userId    String
  tenantId  String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId, tenantId])
  @@index([tenantId])
}

// OrgSettings model - stores organization/tenant-specific settings
model OrgSettings {
  id        String   @id @default(uuid())
  tenantId  String   @unique
  settings  Json     // Flexible JSON field for various settings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}
